    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.0",
    "@types/styled-components": "^5.1.34",
    "babel-preset-expo": "^54.0.4",
    "husky": "^9.1.7",
    "jest-expo": "^54.0.12",
    "lint-staged": "^16.2.4",
    "react-test-renderer": "^19.2.0",
    "typescript": "^5.9.3"
