    "@tamagui/core": "^1.135.2",
    "@tamagui/input": "^1.135.2",
    "@tamagui/scroll-view": "^1.135.2",
    "@tamagui/stacks": "^1.135.2",
    "@tamagui/text": "^1.135.2",
    "abort-controller": "^3.0.0",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "expo": "^54.0.13",
